{
  "name": "kn",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "start": "concurrently npm:watch-http npm:watch-ws",
    "build": "tsc -p app/tsconfig.dev.json",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "watch-http": "ts-node --project app/tsconfig.dev.json app/src/http/server.ts",
    "watch-ws": "ts-node --project app/tsconfig.dev.json app/src/ws/server.ts"
  },
  "author": "Stepan Savelyev",
  "license": "ISC",
  "nodemonConfig": {
    "ignore": ["**/*.test.ts", "**/*.spec.ts", ".git", "node_modules"],
    "watch": ["app/src/http", "app/src/ws", "app/src/lib"],
    "exec": "npm start",
    "events": {
      "restart": "fuser -k 3000/tcp; fuser -k 3030/tcp"
    },
    "delay": 1500,
    "ext": "ts"
  },
  "dependencies": {
    "ejs": "^3.0.1",
    "express": "^4.17.1",
    "mongodb": "^3.5.5",
    "morgan": "^1.9.1",
    "typescript": "^3.8.3",
    "ws": "^7.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/mongodb": "^3.5.2",
    "@types/morgan": "^1.9.0",
    "@types/ws": "^7.2.2",
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2",
    "ts-node": "^8.6.2"
  }
}
